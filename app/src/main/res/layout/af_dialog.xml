<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/_20dp"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/afDialog_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="TITLE" />

    <TextView
        android:id="@+id/afDialog_textView_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:textSize="15sp"
        tools:text="MESSAGE" />

    <TextView
        android:id="@+id/afDialog_textView_button_positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:background="#00ff00"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        tools:text="MESSAGE" />

    <TextView
        android:id="@+id/afDialog_textView_button_negative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:background="#ff00"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        tools:text="MESSAGE" />

    <TextView
        android:id="@+id/afDialog_textView_button_neutral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:background="#ff00ff"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        tools:text="MESSAGE" />

</LinearLayout>