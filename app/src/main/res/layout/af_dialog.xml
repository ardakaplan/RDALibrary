<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/afDialog_linearlayout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_20dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/afDialog_imageView_icon"
        android:layout_width="@dimen/_40dp"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center"
        android:src="@drawable/check" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/afDialog_textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="TITLE" />

            <TextView
                android:id="@+id/afDialog_textView_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:textSize="15sp"
                tools:text="MESSAGE" />

            <TextView
                android:id="@+id/afDialog_textView_button_positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:background="#00ff00"
                android:gravity="center"
                android:padding="@dimen/_10dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="MESSAGE" />

            <TextView
                android:id="@+id/afDialog_textView_button_negative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:background="#ff00"
                android:gravity="center"
                android:padding="@dimen/_10dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="MESSAGE" />

            <TextView
                android:id="@+id/afDialog_textView_button_neutral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:background="#ff00ff"
                android:gravity="center"
                android:padding="@dimen/_10dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="MESSAGE" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>